{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleDetection": "force",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true
  },
  "include": ["."],
  "exclude": ["node_modules", "dist"]
}